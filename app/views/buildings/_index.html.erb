<table class="table table-hover table-inverse">
  <% buildings.each do |building| %>
    <thead>
      <tr>
        <th></th>
        <th>建物画像</th>
        <th>建物名</th>
        <th>場所</th>
        <th>説明</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag building.get_image %></td>
        <td><%= image_tag building.image %><br>
        <%= building.user.name %></td>
        <td><%= building.shop_name %></td>
        <td><%= building.place %></td>
        <td><%= building.body %></td>
        <td><%= link_to "詳細", building_path(building.id) %></td>
      </tr>
    </tbody>
  <% end %>
</table>